pipeline {
  agent any

  options {
    timeout(time: 2, unit: 'MINUTES')
  }

  stages {

    stage('Building image') {
      steps{
        bat '''
        docker build -t testapp .
        '''  
      }
    }
  
  stage('Health Check') {
    steps {
        script {
            sh 'docker ps | grep testapp'
        }
    }
}

